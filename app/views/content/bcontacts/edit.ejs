<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <input type="hidden" name="id" value="<%= bcontact._id %>" >
                <div class="form-group">
                    <label for="nameTextField">Bcontact Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Bcontact Name"
                    name="name" 
                    value="<%= bcontact.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">PhoneNumber</label>
                    <input type="number" class="form-control"
                    id="authorTextField"
                    placeholder="Enter the Phone Number"
                    name="phonenumber" 
                    value="<%= bcontact.phonenumber %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">EmailAddress</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter the Email Address"
                    name="emailaddress" 
                    value="<%= bcontact.emailaddress %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/bcontact-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>